{
  "npm": true,
  "moduleResolution": "node",
  "entrypoint": "index.html",
  "shell": "src/verkoop-app.js",
  "fragments": [
    "src/offerte-dialog.js",
    "src/opening-dialog.js",
    "src/pricing-dialog.js"
  ],
  "sources": [
    "src/**/*",
    "data/**/*",
    "img/**/*"
  ],
  "lint": {
    "rules": 
      ["polymer-2-hybrid"]
  },
  "builds": [
    {
      "preset": "es5-bundled"
    },
    {
      "preset": "es6-unbundled"
    },
    {
      "preset": "es6-bundled"
    }
  ]
}
